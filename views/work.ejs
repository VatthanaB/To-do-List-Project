<%- include("partials/header.ejs") %>

<main>
  <div class="list-top">
    <h1>Time To Work</h1>
  </div>
  <div class="list-body">
    <label id="first-label" class="checkbox-label">
      <input class="check-square" type="checkbox" />
      <p class="text-check-box">Write the work you need to do here ! </p>
    </label>

    <% workItems.forEach(item => { %>
    <label class="checkbox-label">
      <input class="check-square" type="checkbox" />
      <p class="text-check-box"><%= item %></p>
    </label>
    <% }); %>

    <!-- Form to add new box  -->
    <form class="item checkbox-label-bottom" action="/submit-work" method="post">
        <input
          id="form"
          type="text"
          name="newItem"
          placeholder="New Item"
          autocomplete="off"
        />
        <button id="cross" type="submit" name="list">âž•</button>
      </form>
  </div>
</main>

